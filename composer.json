{
  "name": "byurrer/interpret-sample-php",
  "authors": [
    {
      "name": "byurrer",
      "email": "byurrer@mail.ru"
    }
  ],
  "require": {
    "php": ">=8.1"
  },
  "autoload": {
    "psr-4": {
      "InterpretSample\\": "src"
    }
  },
  "require-dev":{
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.9",
    "phpunit/phpunit": "^9"
  },
  "scripts": {
    "cs": "vendor/bin/phpcs --standard=PSR12 src/",
    "lint": "vendor/bin/phpstan -c'phpstan.neon'",
    "tests": "vendor/bin/phpunit --colors=always tests/"
  }
}